{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@modules/*": ["src/modules/*"],
			"@utils/*": ["src/utils/*"]
		},
		"lib": ["es2021", "DOM"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.test.ts",
		"node_modules/**/*"
	]
}